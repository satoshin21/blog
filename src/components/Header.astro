---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<a href="/" class="site-name">{SITE_TITLE}</a>
		<ol class="nav-links">
			<li><HeaderLink href="/" isBlogSection>Articles</HeaderLink></li>
			<li><HeaderLink href="/about">About</HeaderLink></li>
		</ol>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0.75em 2em;
		background: transparent;
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: nowrap;
		max-width: 720px;
		margin: 0 auto;
	}
	.site-name {
		font-size: 1.5em;
		font-weight: 700;
		color: rgb(var(--black));
		text-decoration: none;
		flex-shrink: 0;
	}
	.site-name:hover {
		color: rgb(var(--gray));
	}
	.nav-links {
		display: flex;
		gap: 1.5em;
		margin: 0;
		padding: 0;
		list-style: none;
		font-size: 1em;
		font-weight: 600;
		flex-shrink: 0;
	}
	.nav-links a {
		color: rgb(var(--gray));
		text-decoration: none;
		padding: 0;
		border: none;
	}
	.nav-links a:hover {
		color: rgb(var(--black));
	}
	.nav-links a.active {
		color: rgb(var(--black));
		font-weight: 700;
		text-decoration: none;
	}
	@media (max-width: 480px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.75em;
		}
	}
</style>
